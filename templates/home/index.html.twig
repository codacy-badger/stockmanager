{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}


    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Déclarer une panne</h5>

                    <a href="{{ path('issue_new') }}" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>

        <div class="col-md-8">

            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Type d'équipement</th>
                    <th>Modèle</th>
                    <th>N° série</th>
                    <th>Date</th>
                    <th>Date prise en charge</th>
                    <th>Symptomes</th>
                    <th>Descriptions</th>


                </tr>
                </thead>
                <tbody>
                {% for issue in issues %}
                    <tr>
                        <td>{{ issue.id }}</td>
                        <td>{{ issue.equipment.brand.category.name }}</td>
                        <td>{{ issue.equipment.brand.name }}</td>
                        <td>{{ issue.equipment.serial }}</td>
                        <td>{{ issue.dateRequest | date("m/d/Y H:i:s", "Europe/Paris") }}</td>
                        <td>{% if issue.dateChecked %}{{ issue.dateChecked | date("m/d/Y H:i:s", "Europe/Paris") }}{% else %}
                                Non renseigné{% endif %}</td>
                        <td>
                            <ul>
                                {% for symptom in issue.symptoms %}
                                    <li>{{ symptom.name }}</li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td>{{ issue.description }}</td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Pas d'enregistrement</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
