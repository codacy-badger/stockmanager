{% extends 'admin/index.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <table class="table table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Login</th>
                {#<th>Mot de passe</th>#}
                <th>Email</th>
                <th>Droit</th>
                <th>Exploitant</th>
