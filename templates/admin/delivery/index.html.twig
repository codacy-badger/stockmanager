{% extends 'admin/index.html.twig' %}

{% block title %}Bons de livraisons{% endblock %}

{% block body %}
    <h1>Bons de livraisons</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Nombre de tickets</th>
            <th>Exploitant</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for delivery in deliveries %}
            <tr>
                <td>{{ delivery.id }}</td>
                <td>{{ delivery.dateCreation | date("d/m/Y H:i:s", "Europe/Paris") }}</td>
                <td>
                    {{ delivery.issues.count }}
                </td>
                <td>
                    {% for issue in delivery.issues %}
                        {% if loop.first %}
                            {{ issue.user.operator.name }}
                        {% endif %}
                    {% endfor %}
                </td>
                <td>
                    <form action="{{ path('delivery_export', {'id': delivery.id}) }}"
                          method="post">
                        <input type="hidden" name="token"
                               value="{{ csrf_token('delivery-export') }}"/>
                        <button type="submit" class="btn btn-sm btn-warning"><i
                                    class="far fa-edit"></i> Exporter
                        </button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de donn√©es</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
