{% extends 'admin/index.html.twig' %}

{% block title %}Notifications{% endblock %}

{% block body %}
    <h3>Exploitants en attente de notification de livraison</h3>
    <table class="table">
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Exploitant</th>
            <th>Nombre de tickets non notifiés</th>
            <th>Action</th>
        </tr>

        {% for user in users %}
            <tr>


                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.operator.name }}</td>
                <td>
                    {{ user.issues.count }}
                </td>

                <td>
                    <form action="{{ path('notification_send', {'id': user.id }) }}" method="post">
                        <input type="hidden" name="token" value="{{ csrf_token('send-notification') }}">
                        <button type="submit" class="btn btn-info">envoyer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}

    </table>

{% endblock %}
