    <section class="mt-1">
        <div class="row mt-auto">
            <h4>Historique Localisation</h4>
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>id</th>
                    <th>Date</th>
                    <th>Societe</th>
                    <th>Type d'équipement</th>
                    <th>Numéro de série</th>
                    <th>Etat</th>
                    <th>Pièce 1</th>
                    <th>Pièce 2</th>
                </tr>
                </thead>
                <tbody>


                {% for location in locations %}

                    <tr>
                        <td>
                            {{ location.id }}
                        </td>
                        <td>
                            {{ location.date | date('d/m/y', 'Europe/Paris') }}
                        </td>
                        <td>
                            {% if location.site %}
                                {{ location.site.operator.first.name }}
                            {% else %}
                                n/a
                            {% endif %}
                        </td>

                        <td>
                            {% if location.equipment %}
                                {{ location.equipment.brand.category.name }}
                            {% else %}
                                n/a
                            {% endif %}
                        </td>
                        <td>
                            {% if location.equipment %}
                                {{ location.equipment.serial }}
                            {% else %}
                                n/a
                            {% endif %}
                        </td>
                        <td>
                            {% if location.isOk == true %}
                                <span class="badge badge-success">ok</span>
                            {% else %}
                                <span class="badge badge-danger">ko</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if location.part1 %}
                                {{ location.part1.name }}
                            {% else %}
                                n/a
                            {% endif %}
                        </td>
                        <td>
                            {% if location.part2 %}
                                {{ location.part2.name }}
                            {% else %}
                                n/a
                            {% endif %}
                        </td>

                    </tr>


                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>






