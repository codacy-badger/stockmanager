    <section class="mt-1">
        <div class="row">
            <h4>Historique des pannes pour: {{ equipment.brand.category.name }} {{ equipment.brand.name }} {{ equipment.serial }}</h4>
            <table class="table table-sm table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Technicien</th>
                    <th>Provenance</th>
                    <th>Symptômes</th>
                    <th>pièces changés</th>
                </tr>
                </thead>
                <tbody>
                {% for myIssue in historicIssues %}
                    <tr>
                        <td>{{ myIssue.id }}</td>
                        <td>{{ myIssue.dateRequest | date("d/m/Y", "Europe/Paris") }}</td>
                        <td>

                            {% if myIssue.repair %}
                                {{ myIssue.repair.technician.firstname }} {{ myIssue.repair.technician.lastname }}
                            {% endif %}
                        </td>
                        <td>{{ myIssue.user.operator.name }}</td>
                        <td>
                            <ul>
                                {% if myIssue.repair %}
                                    {% for symptom in myIssue.repair.symptoms %}
                                        <li>{{ symptom.name }}</li>
                                    {% endfor %}
                                {% endif %}
                            </ul>
                        </td>
                        <td>
                            {% if myIssue.repair %}
                                {% for part in myIssue.repair.parts %}
                                    <li><span class="badge badge-info">{{ part.name }}</span></li>
                                {% endfor %}
                            {% endif %}
                            </ul>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">pas d'enregistrements</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </section>

