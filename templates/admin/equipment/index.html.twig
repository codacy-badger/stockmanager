{% extends 'admin/index.html.twig' %}

{% block title %}Equipment index{% endblock %}

{% block body %}
    <h1>Equipment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Catégorie</th>
                <th>Modèle</th>
                <th>Serial</th>
                <th>Contrat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipment in equipment %}
            <tr>
                <td>{{ equipment.id }}</td>
                <td>{{ equipment.brand.category.name }}</td>
                <td>{{ equipment.brand.name }}</td>
                <td>{{ equipment.serial }}</td>
                <td>{{ equipment.contract.name}}</td>
                <td>
                    <a href="{{ path('equipment_show', {'id': equipment.id}) }}">show</a>
                    <a href="{{ path('equipment_edit', {'id': equipment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('equipment_new') }}">Create new</a>
{% endblock %}
