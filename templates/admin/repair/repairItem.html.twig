{% extends 'admin/index.html.twig' %}

{% block title %}Réparation {% endblock %}

{% block body %}

    <h4>Réparation</h4>
    <div class="row">
        <div class="col-md-4 bg-secondary text-white">

            <div class="d-flex justify-content-between my-1">

                <img class="img-circle d-none d-sm-block" data-toggle="tooltip" data-placement="top"
                     title="{{ issue.equipment.brand.category.name }}" width="100"
                     height="100"
                     src="{{ asset(issue.equipment.brand.category.image.url) }}"
                     alt="{{ issue.equipment.brand.category.image.alt }}">

                <div class="d-flex flex-column">
                    <div>
                        <b>Id:</b> {{ issue.equipment.id }}
                    </div>
                    <div>
                        <b>Catégorie:</b> {{ issue.equipment.brand.category.name }}
                    </div>
                    <div>
                        <b>Modèle:</b> {{ issue.equipment.brand.name }}
                    </div>
                    <div>
                        <b>N° Serie:</b> {{ issue.equipment.serial }}
                    </div>
                    {% if issue.equipment.contract.id == constant('CONTRAT_HORS_SISMO', contract) %}
                        <div>
                                        <span class="badge badge-info badge-pill">
                                         Contrat: {{ issue.equipment.contract.name }}
                                        </span>
                        </div>
                    {% endif %}
                </div>
            </div>

            <table class="table">
                <tbody>
                <tr>
                    <th>Date d'arrivée:</th>
                    <td>{{ issue.dateEnd | date('d/m/y') }}</td>
                </tr>
                <tr>
                    <th>Symptômes déclarés:</th>
                    <td>
                        {% for symptom in issue.symptoms %}
                            <span class="badge badge-warning">{{ symptom.name }}</span>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Description:</th>
                    <td>
                        {{ issue.description }}
                    </td>
                </tr>
                </tbody>
            </table>

        </div>


        <div class="col-md-4">
            {{ form_start(form) }}
            <h4>Constatations</h4>
            {{ form_row(form.symptoms, { 'attr': {'class': 'js_repair_symptoms'} }) }}
            {{ form_row(form.description) }}
            <div class="d-flex justify-content-around">

                {{ form_row(form.degradation) }}
                {{ form_row(form.noBreakdown) }}
            </div>
        </div>
        <div class="col-md-4">
            <h4>Actions</h4>
            {{ form_row(form.parts, { 'attr': {'class': 'js_repair_parts'} }) }}
            {{ form_row(form.timeToRepair) }}
            {{ form_row(form.softVersion) }}
            <div class="d-flex justify-content-around">

                {{ form_row(form.statsDownload) }}
                {{ form_row(form.softUpload) }}
            </div>
            <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
            {{ form_end(form) }}

        </div>

    </div>

    <section class="mt-1">

        <h4>Statistiques</h4>
        <div class="row">
            <table class="table table-sm table-striped">
                <thead>
                <tr>
                    <th>Pannes</th>
                    <th>Symptomes</th>
                    <th>Pièces</th>
                    <th>Retours</th>
                    <th>MTBF</th>
                    <th>MTTR</th>
                    <th>Taux de disponibilité</th>

                    {#<th>Panne</th>#}
                </tr>
                </thead>
                <tbody>
                {#{% for issue in historicIssues %}#}
                {#<tr>#}
                {#<td>{{ issue.dateRequest | date("d/m/Y", "Europe/Paris") }}</td>#}
                {#<td>{{ issue.user.operator.name }}</td>#}
                {#<td>{{ issue.dateRequest }}</td>#}
                {#</tr>#}
                {#{% endfor %}#}
                </tbody>
            </table>
        </div>
    </section>

    <section class="mt-1">
        <h4>Historique des pannes</h4>
        <div class="row">
            <table class="table table-sm table-striped">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Exploitant</th>
                    {#<th>Panne</th>#}
                </tr>
                </thead>
                <tbody>
                {% for issue in historicIssues %}
                    <tr>
                        <td>{{ issue.dateRequest | date("d/m/Y", "Europe/Paris") }}</td>
                        <td>{{ issue.user.operator.name }}</td>
                        {#<td>{{ issue.dateRequest }}</td>#}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </section>


{% endblock %}

{% block stylesheets %}

    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet"/>



{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.js_repair_symptoms').select2();
        });
    </script>
    <script>
        $(document).ready(function () {
            $('.js_repair_parts').select2();
        });
    </script>
{% endblock %}
