{% extends 'admin/index.html.twig' %}

{% block title %}Réparation {% endblock %}

{% block body %}

    <h3><i class="fas fa-wrench"></i> Réparation</h3>
    <div class="row">
        <div class="col-md-4 bg-secondary text-white">

            <div class="d-flex justify-content-between my-1">

                <img class="img-circle d-none d-sm-block" data-toggle="tooltip" data-placement="top"
                     title="{{ issue.equipment.brand.category.name }}" width="100"
                     height="100"
                     src="{{ asset(issue.equipment.brand.category.image.url) }}"
                     alt="{{ issue.equipment.brand.category.image.alt }}">

                <div class="d-flex flex-column">
                    <div>
                        <b>Id:</b> {{ issue.equipment.id }}
                    </div>
                    <div>
                        <b>Catégorie:</b> {{ issue.equipment.brand.category.name }}
                    </div>
                    <div>
                        <b>Modèle:</b> {{ issue.equipment.brand.name }}
                    </div>
                    <div>
                        <b>N° Serie:</b> {{ issue.equipment.serial }}
                    </div>
                    {% if issue.equipment.contract.id == out_sismo_contract %}
                        <div>
                                        <span class="badge badge-info badge-pill">
                                         Contrat: {{ issue.equipment.contract.name }}
                                        </span>
                        </div>
                    {% endif %}
                </div>
            </div>

            <table class="table">
                <tbody>
                <tr>
                    <th>Date de début de panne:</th>
                    <td>{{ issue.dateRequest | date('d/m/y') }}</td>
                </tr>
                <tr>
                    <th>Date d'arrivée:</th>
                    <td>{{ issue.dateEnd | date('d/m/y') }}</td>
                </tr>
                <tr>
                    <th>Symptômes déclarés:</th>
                    <td>
                        {% for symptom in issue.symptoms %}
                            <span class="badge badge-warning">{{ symptom.name }}</span>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Description:</th>
                    <td>
                        {{ issue.description }}
                    </td>
                </tr>
                </tbody>
            </table>

        </div>


       {{ include('admin/repair/_form.html.twig') }}

    </div>

    <section class="mt-1">

        <h4>Statistiques</h4>
        <div class="row">
            <table class="table table-sm table-striped">
                <thead>
                <tr>
                    <th>Pannes</th>
                    <th>Symptômes</th>
                    <th>Pièces changés</th>
                    <th>MTBF</th>
                    <th>MTTR</th>
                    <th>Taux de disponibilité</th>

                    {#<th>Panne</th>#}
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td class="d-flex flex-column">
                        <div>
                            Total: {{ historicIssues | length }}
                        </div>
                        <div>
                            <table></table>
                        </div>
                    </td>
                    <td>
                        {{ numberOfSymptoms }}
                    </td>
                    <td>
                        {{ numberOfParts }}
                    </td>
                    <td>
                        <span {% if mtbf < issue.equipment.brand.category.mtbf %}class="badge badge-danger" {% else %} class="badge badge-success"{% endif %}>{{ mtbf | round }}</span>
                    </td>

                    <td>
                        {{ mttr }}
                    </td>
                    <td>
                        {{ rate }}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </section>

    <section class="mt-1">
        <h4>Historique des pannes</h4>
        <div class="row">
            <table class="table table-sm table-striped">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Technicien</th>
                    <th>Provenance</th>
                    <th>Symptômes</th>
                    <th>pièces changés</th>
                </tr>
                </thead>
                <tbody>
                {% for issue in historicIssues %}
                    <tr>
                        <td>{{ issue.dateRequest | date("d/m/Y", "Europe/Paris") }}</td>
                        <td>

                            {% if issue.repair %}
                            {{ issue.repair.technician.firstname }} {{ issue.repair.technician.lastname }}
                            {% endif %}
                        </td>
                        <td>{{ issue.user.operator.name }}</td>
                        <td>
                            <ul>
                                {% if issue.repair %}
                                    {% for symptom in issue.repair.symptoms %}
                                        <li>{{ symptom.name }}</li>
                                    {% endfor %}
                                {% endif %}
                            </ul>
                        </td>
                        <td>
                            {% if issue.repair %}
                                {% for part in issue.repair.parts %}
                                   <li><span class="badge badge-info">{{ part.name }}</span></li>
                                {% endfor %}
                            {% endif %}
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </section>


{% endblock %}

{% block stylesheets %}

    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet"/>



{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.js_repair_symptoms').select2();
        });
    </script>
    <script>
        $(document).ready(function () {
            $('.js_repair_parts').select2();
        });
    </script>
{% endblock %}
